<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_item_lendreadlist_num"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="2dp"
        android:text="1000"
        android:textColor="@color/red"
        android:layout_width="78dp"
        android:layout_height="80dp"
        android:background="@drawable/imagebook"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="107dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="操作系统"
                android:textColor="#4d4c4c"
                android:id="@+id/tv_item_lendreadlist_bookname"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="25dp">
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已借天数：35"
                android:id="@+id/tv_item_lendreadlist_days"
                android:textSize="12sp"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:gravity="right"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content"
                android:text="借阅日期：2016-10-12"
                android:id="@+id/tv_item_lendreadlist_lendtime"
                android:textSize="12sp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="25dp">
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="作者：何老师"
                android:id="@+id/tv_item_lendreadlist_author"
                android:textSize="12sp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最迟归还期：2016-10-12"
                android:singleLine="true"
                android:maxLength="18"
                android:gravity="right"
                android:layout_marginRight="5dp"
                android:id="@+id/tv_item_lendreadlist_returntime"
                android:textSize="12sp"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="25dp">
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出版社：五邑大学出版社"
                android:id="@+id/tv_item_lendreadlist_publisher"
                android:textSize="12sp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="已借：1本"
                android:layout_marginRight="5dp"
                android:id="@+id/tv_item_lendreadlist_number"
                android:textSize="12sp"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
