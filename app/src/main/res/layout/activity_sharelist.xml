<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lendread_back01"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/steelblue"
        android:layout_width="match_parent"
        android:layout_height="35dp">
        <ImageView
            android:id="@+id/iv_shareinfolist_back"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:src="@drawable/back01"
            android:layout_width="60dp"
            android:layout_height="25dp" />
        <LinearLayout
            android:id="@+id/ll_sharelist_top"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:gravity="center"
                android:text="动态分享"
                android:textSize="20sp"
                android:textColor="#fffff1"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_shareinfolist_add"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:src="@drawable/addshare"
            android:layout_width="60dp"
            android:layout_height="25dp" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

       <ImageView
            android:layout_gravity="center_vertical"
            android:src="@drawable/backshares"
            android:background="#5888e7"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="150dp" />

            <ListView
                android:dividerHeight="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lv_shareinfolist_list"
                android:layout_weight="10.58" />

        </LinearLayout>
    </ScrollView>



</LinearLayout>